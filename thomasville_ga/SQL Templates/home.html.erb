<!DOCTYPE html>
<html class="no-js" lang="en">

<head>

    <meta charset="utf-8">
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thomasville City Schools District</title>
    <%= include_gon %>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,400i,700,700i" rel="stylesheet">

       <%= favicon_link_tag "apptegy_cms/themes/thomasvillega/favicon.ico" %>
        <%= javascript_include_tag "apptegy_cms/themes/thomasvillega/application" %>
            <%= stylesheet_link_tag    "apptegy_cms/themes/thomasvillega/application", :media => "all"  %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--[if (gte IE 6)&(lte IE 8)]>
	  <script src="http://s3.amazonaws.com/nwapi/nwmatcher/nwmatcher-1.2.4-min.js"></script>
	<![endif]-->
    <!--[if lt IE 8]>
	  <script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE8.js"></script>
	<![endif]-->
</head>

<body class="cbp-spmenu-push homepage">

    <%= render "thomasvillega/shared/header" %>

        <!-- ======================== SLIDER ======================== -->
<div id="slider">
            <div class="slider-container">
                <% current_organization.photos.order(:position).each do |photo| %>
                    <div class="slide">
                        <img src="<%= photo.data.display.try(:url) %>">
                    </div>
                    <% end %>
            </div>
          <div class="slider-info">
                <%= raw current_organization.bulletin_board.try(:content) %>
                <div class="app-links">
                  <ul>
                    <li><%= image_tag "apptegy_cms/themes/thomasvillega/bulldog_bytes.png", alt: "Thomasville City Schools District" %></li>
                    <li><%= image_tag "apptegy_cms/themes/thomasvillega/google.png", alt: "Thomasville City Schools District" %></li>
                    <li><%= image_tag "apptegy_cms/themes/thomasvillega/apple.png", alt: "Thomasville City Schools District" %></li>
                  </ul>
            </div>
        </div>
      </div>

        <!-- ======================== MAIN CONTENT ======================== -->
        <%= cms_slider_menu %>
            <div class="main" role="main">
                <div class="container clearfix">
                    <%= render "thomasvillega/shared/section_boxes" %>
                </div>
            </div>

            <!-- ======================== FOOTER ======================== -->

            <%= render "thomasvillega/shared/footer" %>

            <!-- ======================== JAVASCRIPTS ======================== -->


  <script type="text/javascript">
        $(document).ready(function() {
            if ($(window).width() > 1040) {
                var sliderheight = $('#slider').height();
                var headerheight = $('#header').height();
                var windowheight = $(window).height();
                var imgheight = windowheight - headerheight;
                $('.slider-container img,.slider-container  .bx-wrapper .bx-viewport').css("max-height", imgheight);
                $('#left-nav .menu-wrap').css("min-height", imgheight);
            } else {
                $('.slider-container img, #slider,.slider-container .bx-wrapper .bx-viewport').css("max-height", "100%");
                $('.slider-container img, #slider, .bx-wrapper .bx-viewport').css("min-height", 90);
                $('#left-nav .menu-wrap').css("height", "auto");
            }
            $('.slider-container').bxSlider({
                mode: 'fade',
                auto: true,
                autoHover: true,
                adaptiveHeight: true,
                onSliderLoad: function() {
                    if ($(window).width() > 1040) {
                        var sliderheight = $('#slider').height();
                        var headerheight = $('#header').height();
                        var windowheight = $(window).height();
                        var imgheight = windowheight - headerheight;
                        $('.slider-container img,.slider-container  .bx-wrapper .bx-viewport').css("max-height", imgheight);
                        $('#left-nav .menu-wrap').css("min-height", imgheight);
                    } else {
                        $('.slider-container img, #slider,.slider-container .bx-wrapper .bx-viewport').css("max-height", "100%");
                        $('.slider-container img, #slider, .bx-wrapper .bx-viewport').css("min-height", 90);
                        $('#left-nav .menu-wrap').css("height", "auto");
                    }
                    $(window).resize(function() {
                        if ($(window).width() > 1040) {
                            var sliderheight = $('#slider').height();
                            var headerheight = $('#header').height();
                            var windowheight = $(window).height();
                            var imgheight = windowheight - headerheight - 10;
                            $('.slider-container img, .slider-container  .bx-wrapper .bx-viewport').css("max-height", imgheight);
                            $('#left-nav .menu-wrap').css("min-height", imgheight);
                        } else {
                            $('.slider-container img, #slider,.slider-container  .bx-wrapper .bx-viewport').css("max-height", "100%");
                            $('.slider-container img, #slider, .slider-container  .bx-wrapper .bx-viewport').css("min-height", 90);
                            $('#left-nav .menu-wrap').css("height", "auto");
                        }
                    });
                }

            });

            var slider = $('.news-slider').bxSlider({
                auto: true,
                autoHover: true,
                adaptiveHeight: true,
                minSlides: 2,
                maxSlides: 2,
                slideWidth: 877,
                slideMargin: 22
            });
            if ($(window).width() <= 1000) {
                slider.reloadSlider({
                    mode: 'fade',
                    auto: true
                });
            }
        });

    </script>

</body>

</html>
