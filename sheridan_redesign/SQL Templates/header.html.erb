                        <span>
                            <%= image_tag 'apptegy_cms/themes/sheridanar_redesign/menu/events.png', alt: "Events Icon" %>
                        </span>
                        Events
                    </a>
                </li>

                <% if params[:org] == "central-office" %>
                <li class="staff">
                    <a href=<%= params[:org].present? ? "/o/#{params[:org]}/staff" : "/staff"%>>
                        <span>
                            <%= image_tag 'apptegy_cms/themes/sheridanar_redesign/menu/staff.png', alt: "Staff Icon" %>
                        </span>
                        Staff
                    </a>
                </li>

                <li class="documents">
                    <a href=<%= params[:org].present? ? "/o/#{params[:org]}/documents" : "/documents"%>>
                        <span>
                            <%= image_tag 'apptegy_cms/themes/sheridanar_redesign/menu/documents.png', alt: "Documents Icon" %>
                        </span>
                        Documents
                    </a>
                </li>






                <% elsif params[:org] == "smackover-preschool" %>
                <li class="staff">
                    <a href=<%= params[:org].present? ? "/o/#{params[:org]}/staff" : "/staff"%>>
                        <span>
                            <%= image_tag 'apptegy_cms/themes/sheridanar_redesign/menu/staff.png', alt: "Staff Icon" %>
                        </span>
                        Staff
                    </a>
                </li>

                <li class="documents">
                    <a href=<%= params[:org].present? ? "/o/#{params[:org]}/documents" : "/documents"%>>
                        <span>
                            <%= image_tag 'apptegy_cms/themes/sheridanar_redesign/menu/documents.png', alt: "Documents Icon" %>
                        </span>
                        Documents
                    </a>
                </li>

 <li class="dining">
                    <a href=<%= params[:org].present? ? "/o/#{params[:org]}/dining" : "/dining"%>>
                        <span>
                            <%= image_tag 'apptegy_cms/themes/sheridanar_redesign/menu/dining.png', alt: "Dining Icon" %>
                        </span>
                      Dining
                    </a>
                </li>




