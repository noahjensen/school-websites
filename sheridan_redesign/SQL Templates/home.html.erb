    <script>
        $(document).ready(function() {
            $('.menu-wrap ul.second-nav li ul').parent().addClass('has-child');

            /* $('html').click(function() {
                $(".menu-wrap").slideUp();
                $("#left-nav").removeClass('active');

            });
            $('.menu-btn').click(function(e) {
                e.stopPropagation();
            });
*/
           $("#left-nav .menu-btn > span, .menu-close").click(function(e) {
                $("#left-nav .menu-wrap").slideToggle();
                $("#left-nav").toggleClass('active');

                        var headerheight = $('#header').height();
                        var windowheight = $(window).height();
                        var imgheight = windowheight - headerheight;

            });
            $('#left-nav .schools-menu').click(function() {


              if (!$(this).hasClass('active')) {
                   $("#left-nav .menu-wrap").slideDown();
					  $('.menu-wrap').addClass('school-wrap');
                } else {
                   $("#left-nav .menu-wrap").slideUp('slow', function() {
							 $('.menu-wrap').removeClass('school-wrap');
						  });

                }
                $('.menu-wrap ul.first-nav, .menu-wrap .second-nav').hide();
                $('.menu-wrap .schools-nav').slideToggle();
                $('#left-nav.active .first-menu').removeClass('active');
                $(this).toggleClass('active');

                $('#left-nav .menu-btn').toggleClass('school-active-btn');
            });
            $('#left-nav .first-menu').click(function() {

              if (!$(this).hasClass('active')) {
                   $("#left-nav .menu-wrap, .menu-wrap .first-nav, .menu-wrap .second-nav").slideDown();
                } else {
                   $("#left-nav .menu-wrap, .menu-wrap .first-nav, .menu-wrap .second-nav").slideUp();
                }
                $('.menu-wrap .schools-nav').hide();

                $('#left-nav .schools-menu').removeClass('active');
                $(this).toggleClass('active');
                $('.menu-wrap').removeClass('school-wrap');
                $('#left-nav .menu-btn').removeClass('school-active-btn');
            });

            if ($(window).width() > 980) {

                $("ul.second-nav li.has-child").hover(
                    function() {
                        $(this).children('ul').stop().slideDown("slow");
                        $(this).addClass("open");
                    },
                    function() {
                        $(this).children('ul').stop().slideUp("slow");
                        $(this).removeClass("open");
                    }
                );

            }
            $('ul.second-nav li.has-child span').click(function() {
                $(this).next().slideToggle("slow");
                $(this).parent().toggleClass("open");
            });


        });

    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.slider-container').bxSlider({
                mode: 'horizontal',
                auto: true,
                pause: 3500,
                adaptiveHeight: true,
                speed: 1500,
                onSliderLoad: function() {
                    if ($(window).width() > 1040) {
                        var sliderheight = $('#slider').height();
                        var headerheight = $('#header').height();
                        var windowheight = $(window).height();
                        var leftSliderHeight = $('#slider .slider-info').height();
                        var imgheight = windowheight - headerheight - 10;
                        $('.slider-container img, #slider,.slider-container  .bx-wrapper .bx-viewport').css("max-height", imgheight);
                        $('.slider-container img, #slider, .slider-container  .bx-wrapper .bx-viewport').css("min-height", leftSliderHeight + 60);
                        //$('#left-nav .menu-wrap').css("height", imgheight);
                    } else {
                        $('.slider-container img, #slider,.slider-container  .bx-wrapper .bx-viewport').css("max-height", "100%");
                        $('.slider-container img, #slider, .bx-wrapper .bx-viewport').css("min-height", 90);
                        //$('#left-nav .menu-wrap').css("height", "auto");
                    }
                    $(window).resize(function() {
                        if ($(window).width() > 1040) {
                            var sliderheight = $('#slider').height();
                            var headerheight = $('#header').height();
                            var windowheight = $(window).height();
                            var leftSliderHeight = $('#slider .slider-info').height();
                            var imgheight = windowheight - headerheight - 10;
                            $('.slider-container img, #slider, .slider-container  .bx-wrapper .bx-viewport').css("max-height", imgheight);
                            $('.slider-container img, #slider, .slider-container  .bx-wrapper .bx-viewport').css("min-height", leftSliderHeight + 60);
                            // $('#left-nav .menu-wrap').css("height", imgheight);
                        } else {
                            $('.slider-container img, #slider,.slider-container  .bx-wrapper .bx-viewport').css("max-height", "100%");
                            $('.slider-container img, #slider, .slider-container  .bx-wrapper .bx-viewport').css("min-height", 90);
                            //$('#left-nav .menu-wrap').css("height", "auto");
                        }
                    });
                }

            });


document.getElementById("cboxNext").setAttribute("aria-label", "Next Photo");
document.getElementById("cboxPrevious").setAttribute("aria-label", "Previous Photo");
document.getElementById("cboxSlideshow").setAttribute("aria-label", "Slide Show");
        });

    </script>



