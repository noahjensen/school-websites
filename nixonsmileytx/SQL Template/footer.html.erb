<footer id="footer">
    <div class="container clearfix">
        <div class="footer-col">
            <h5><%= current_organization.try(:name) %></h5>
            <p><%= current_organization.try(:address) %>
                <br><%= "#{current_organization.try(:city)}, #{current_organization.try(:state)[-2..-1]} #{current_organization.try(:zip)}" %>
                <br><%= "Ph #{current_organization.try(:phone_number)}" %>
                <br><%= "Fax #{current_organization.try(:fax_number)}" %></p>
        </div>

        <div class="footer-col">
            <h5>Schools</h5>
            <p>Nixon-Smiley High School
                <br>Nixon-Smiley Middle School
                <br>Nixon-Smiley Elementary
                <br>Nixon-Smiley DAEP </p>
        </div>

        <div class="footer-col quick-links">
            <h5>quicklinks</h5>
            <ul class="footer-links">
                <li><a href="">Departments</a></li>
                <li><a href="">Employment</a></li>
                <li><a href="">For Parents</a></li>
                <li><a href="">For Students</a></li>
            </ul>
        </div>


        <div class="footer-col last">
            <% if current_organization.try(:facebook_link).present? %>
            <a href="<%= current_organization.try(:facebook_link) %>" class="fb" target="_blank"><%= image_tag "apptegy_cms/themes/nixonsmileytx/facebook-icon.png", alt: " "%></a>
           <% end %>

             <a href="https://itunes.apple.com/us/app/elkhorn-area-school-district/id1180724674" class="app-store">Download on the App Store</a>
            <br>
           <% if current_organization.try(:twitter_link).present? %>
            <a href="<%= current_organization.try(:twitter_link) %>" class="tw" target="_blank"><%= image_tag "apptegy_cms/themes/nixonsmileytx/twitter.png", alt: " "%></a>
         <% end %>
       <a href="https://play.google.com/store/apps/details?id=com.apptegy.elkhorn" class="google-play">Get it on Google play</a> </div>
    </div>
    <div class="container copyright">Copyright &copy; Nixon-Smiley CISD 2017. All rights reserved. Powered by <a href="http://apptegy.com/" target="_blank">apptegy</a>.</div>
